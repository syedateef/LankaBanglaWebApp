  <div class="container-fluid p-2">
    <div class="card alert alert-success shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Please read the <a class="card-link" href="termsNcond">Term and Conditions</a></h5>
      </div>
    </div>
    <div class="card alert alert-success border border-success m-1 p-1 shadow">
      <form action="/clientForm" enctype="multipart/form-data" method="post">
          <div class="form-group p-2">
            <label for="accountNo">Account Number:</label>
            <input type="text" class="form-control" id="accountNo" name="accountNo" aria-describedby="accountNo">
          </div>
          <div class="form-group p-2">
            <label for="clientCode">Client Code:</label>
            <input type="text" class="form-control" id="clientCode" name="clientCode">
          </div>
          <div class="form-group p-2">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="form-group p-2">
            <label for="clientName">Name:</label>
            <input type="text" class="form-control" id="clientName" name="clientName">
          </div>
          <div class="form-group p-2">
            <label for="clientFather">Father's Name:</label>
            <input type="datetime" class="form-control" id="clientFather" name="clientFather">
          </div>
          <div class="form-group p-2">
            <label for="clientMother">Mother's Name:</label>
            <input type="text" class="form-control" id="clientMother" name="clientMother">
          </div>
          <div class="form-group p-2">
              <label for="clientSpouse">Spouse Name:</label>
              <input type="text" class="form-control" id="clientSpouse" name="clientSpouse">
          </div>
          <div class="form-group p-2">
              <label for="clientCountry">Country:</label>
              <input type="text" class="form-control" id="clientCountry" name="clientCountry">
          </div>
          <div class="form-group p-2">
              <label for="clientPhone">Phone Number:</label>
              <input type="text" class="form-control" id="clientPhone" name="clientPhone">
            </div>
            <div class="form-group p-2">
              <label for="clientOperation">Operation (individual or Joint):</label>
              <input type="text" class="form-control" id="clientOperation" name="clientOperation" >
            </div>
            <div class="form-group p-2">
              <label for="clientIntroId">Introducer's ID:</label>
              <input type="text" class="form-control" id="clientIntroId" name="clientIntroId">
            </div>
            <div class="form-group p-2">
              <label for="clientBoNum">BO Number:</label>
              <input type="text" class="form-control" id="clientBoNum" name="clientBoNum">
            </div>
            <div class="form-group p-2">
              <label for="clientBankAcc">Bank account Number:</label>
              <input type="text" class="form-control" id="clientBankAcc" name="clientBankAcc">
              <small id="accountNo" class="form-text text-muted">We'll never share your Information with anyone else.</small>
            </div>
          <button type="submit" class="form-group btn btn-primary m-2 p-2">Submit</button>
       </form>
