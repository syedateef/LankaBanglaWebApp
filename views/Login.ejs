    <title>Login</title>
</head>
<body style="background-color: #25AAB1">
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="#"><h5 class="text-light">LankaBangla</h5></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="background-color:aliceblue">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link text-light" href="index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="AboutUs">About Us</a>
              </li>
          </ul>
        </div>
    </nav>
    <!---------------------------------->
    <div class="container-fluid d-flex justify-content-center p-3">
        <div class="card alert alert-success">
            <div class="card-body">
                <div class="card-title"><h5 class="text-center">Login</h5></div>
                <form action="/login" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label for="userEmail">Email address</label>
                        <input type="email" name="userEmail" id="userEmail" class="form-control" id="email" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password</label>
                        <input type="password" name="userPassword" id="userPassword" class="form-control" id="password">
                    </div>
                    <div class="form-group">
                      <p class="card-text"> <%= locals.message %> </p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-info">Submit</button>
                    </div>    
                    <div class="form-group">
                        <h5 class="text-center p-3">OR</h5>
                        <label class="p-1" for="otherLogin">Login using:</label>
                        <div class="d-flex justify-content-center">
                            <a href="#"><i class="bi bi-google" style="color:black"></i></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!---------------------------------->
