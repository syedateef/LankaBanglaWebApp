    <!--Form for deleting an entry-->
    <div class="card border border-success m-1 p-1 shadow" style="background-color: #B7D7FF;">
      <div class="card-body">
        <h5 class="card-title">Delete Client</h5>
        <form action="/adminDash?_method=DELETE" enctype="multipart/form-data" method="POST" >
