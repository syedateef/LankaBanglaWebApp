    <!-----Posting a new entry------>
    <div class="card border border-success m-1 p-1 shadow" style="background-color: #B7D7FF;">
      <div class="card-body">
        <h5 class="card-title">Create Client</h5>
        <form action="/adminDash" enctype="multipart/form-data" method="POST" >
          <div class="form-group">
            <label for="postClientName">Client Name:</label>
            <input type="text" class="form-control" name="postClientName" id="postClientName">
          </div>
          <div class="form-group">
            <label for="postClientAcc">Account Number:</label>
            <input type="text" class="form-control" name="postClientAcc" id="postClientAcc">
          </div>
          <div class="form-group">
            <label for="postClientBank">Bank Name:</label>
            <input type="text" class="form-control" name="postClientBank" id="postClientBank">
          </div>
          <div class="form-group">
            <label for="bankAccountNum">Bank Account: </label>
            <input type="text" class="form-control" name="postBankAccountNum" id="postBankAccountNum">
          </div>
          <div class="form-group">
            <label for="postClientBoNum">BO Number: </label>
            <input type="text" class="form-control" name="postClientBoNum" id="postClientBoNum">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
